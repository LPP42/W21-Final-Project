@page
@model shoptry.Pages_Product.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductId" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Stock" class="control-label"></label>
                <input asp-for="Product.Stock" class="form-control" />
                <span asp-validation-for="Product.Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Category" class="control-label"></label>
                <select asp-for="Product.Category" class="form-control">
                    <option value="0">Any</option>
                    <option value="1">Board</option>
                    <option value="2">Computer</option>
                    <option value="3">Lego</option>
                    <option value="4">Plastic</option>
                    <option value="5">Doll</option>
                    <option value="6">Plushies</option>
                    <option value="7">Art</option>
                </select>
                <span asp-validation-for="Product.Category" class="text-danger" ></span>              
            </div>

            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Product.RecAgeMin" class="control-label"></label>
                    <input asp-for="Product.RecAgeMin" class="form-control" type="number" step=".5" />
                    <span asp-validation-for="Product.RecAgeMin" class="text-danger"></span>

                    <label asp-for="Product.RecAgeMax" class="control-label"></label>
                    <input asp-for="Product.RecAgeMax" class="form-control" type="number" step=".5" />
                    <span asp-validation-for="Product.RecAgeMax" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
