@page
@model shoptry.Pages_Cart.ViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<h1>Cart</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cart[0].Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart[0].Product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cart[0].Quantity)
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cart)
        {
            var productTotal = item.Quantity * item.Product.Price;

            <tr class="itemBar">
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @productTotal
                </td>
                <td>
                    <a asp-page="Remove" asp-route-id="@item.CartId">Remove from Cart</a>
                </td>
                <br>
            </tr>

        }
    </tbody>
</table>
<div><a href="https://localhost:7130/Product">Continue Shopping</a></div>